<% provide(:title, "Create New") %>

<div class='page-header'><h1>Create Category</h1></div>

<% if @category.errors.size > 0 %>
	<div class='alert alert-danger'>
		<strong> Error(s) on submission : </strong> 
		<ul>
		<% @category.errors.full_messages.each do |f| %>
			<li><%=f%></li>
		<%end%>
		</ul>		
	</div>
<% end %>

<div class='main_contents'>
<%= form_for @category do |f| %>

			<p>
			<%= f.label :Category %><br>
			<%= f.text_field :name , :class => 'form-control' %>
			</p>


		<%= f.button :submit, class: "btn btn-primary" do %>
		  <span class='glyphicon glyphicon-circle-arrow-up'></span> Submit
		<% end %>
<% end %>

</div>